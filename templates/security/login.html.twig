{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion</h1>
    {# Note: pas besoin d'un formulaire crée par Symfony #}
    <form action="{{ path('login') }}" method="post">
        <div class="form-group">
            {#
             # Le nom de champ "_username" permet à Symfony d'identifier ce champ de connexion avec la
             # propriété form_login dans la config. Il est possible de surcharger ce nom.
             #}
            <input type="email" class="form-control" placeholder="Votre adresse e-mail :" name="_username" required>
        </div>
        <div class="form-group">
            {#
            # Le nom de champ "_password" permet à Symfony d'identifier ce champ de connexion avec la
            # propriété form_login dans la config. Il est possible de surcharger ce nom.
            #}
            <input type="password" class="form-control" placeholder="Votre mot de passe :" name="_password" required>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Connexion</button>
        </div>
    </form>
{% endblock %}

